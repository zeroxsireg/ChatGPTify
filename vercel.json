{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "SPOTIFY_CLIENT_ID": "@spotify_client_id",
        "SPOTIFY_CLIENT_SECRET": "@spotify_client_secret",
        "SPOTIFY_REDIRECT_URI": "https://chat-gp-tify.vercel.app/callback"
    }
} 